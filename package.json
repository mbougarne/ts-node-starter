{
  "name": "ts-node-starter",
  "version": "1.0.0",
  "description": "A TypeScript Node JS starter template",
  "main": "build/index.js",
  "author": "Mourad Bougarne <contact@mbougarne.me>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "DEBUG=* nodemon --exec babel-node --extensions \".ts\" -- ./bin/server.ts",
    "start": "npx pm2 start ecosystem.config.js",
    "restart": "npx pm2 restart ecosystem.config.js",
    "delete": "npx pm2 delete ecosystem.config.js",
    "stop": "npx pm2 stop ecosystem.config.js",
    "build": "tsc --project ./",
    "lint": "eslint --cache && tsc --noEmit",
    "prepare": "husky install",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.13.15",
    "@babel/node": "^7.13.13",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-typescript": "^7.13.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/debug": "^4.1.5",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/express-fileupload": "^1.1.6",
    "@types/helmet": "^4.0.0",
    "@types/mime": "^2.0.3",
    "@types/mongoose": "^5.10.5",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.41",
    "@types/redis": "^2.8.28",
    "@types/sequelize": "^4.28.9",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.2.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^6.0.0",
    "lint-staged": ">=10",
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.1",
    "helmet": "^4.4.1",
    "mime": "^2.5.2",
    "mongoose": "^5.12.4",
    "morgan": "^1.10.0",
    "redis": "^3.1.1",
    "sequelize": "^6.6.2",
    "winston": "^3.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && echi \"Pre Commit Stage\" ",
      "pre-push": "yarn lint"
    }
  },
  "lint-staged": {
    "**.{ts,js}": "prettier --check"
  }
}
